<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/profile_bg"
        android:id="@+id/profileLay"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/realName"
            android:text="Ahmet YÄ±lmaz"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"/>


        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/username_svgrepo_com"
            android:layout_below="@id/realName"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/usernameImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_toEndOf="@id/usernameImage"
            android:text="Username"
            android:textColor="@color/black"
            android:layout_below="@id/realName"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_3sdp"

            android:fontFamily="@font/montserrat"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followers"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:layout_margin="@dimen/_2sdp"
            android:text="Followers"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:id="@+id/followings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/followers"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="@font/montserrat"
            android:text="Followings"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_favorite"
            android:layout_below="@id/followings"
            android:layout_alignParentEnd="true"
            android:id="@+id/seeMyLikes"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mainPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileLay"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/recyclerView"/>


    </LinearLayout>


    <include
        layout="@layout/main_voice_player"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/mainPlayer"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>