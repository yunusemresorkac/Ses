<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.ProfileActivity"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerLay"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:background="@drawable/main_bg"
            android:id="@+id/toolbar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text=""
                    android:id="@+id/fullName"

                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/montserrat"
                    android:text=""
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>





            <ImageView
                android:id="@+id/playProfileVoiceBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_gravity="end"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_4sdp"
                android:src="@drawable/play_square_svgrepo_com"
                app:tint="@color/white" />


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/pause_square_svgrepo_com"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_gravity="end"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_4sdp"
                android:id="@+id/pauseProfileVoiceBtn"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/user_add_svgrepo_com__1_"
                android:id="@+id/followBtn"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_5sdp"
                app:tint="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileVoice"
                android:layout_gravity="end"

                android:visibility="gone"/>


        </androidx.appcompat.widget.Toolbar>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:id="@+id/followLay"
            android:padding="@dimen/_15sdp"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/followLay2"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="@dimen/_4sdp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:padding="@dimen/_4sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/totalVoices"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_margin="@dimen/_2sdp"
                            android:text=""
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"

                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_margin="@dimen/_4sdp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followers"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_margin="@dimen/_2sdp"
                            android:text=""
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"

                    android:layout_margin="@dimen/_4sdp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/followings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat"
                            android:text=""
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>





            </LinearLayout>


            <TextView
                android:id="@+id/bioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/followLay2"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:text=""
                android:textColor="@color/white" />




        </RelativeLayout>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mainPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLay"
        >

        <TextView
            android:id="@+id/privateInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/bu_hesap_gizlidir_payla_mlar_g_rmek_i_in_takip_edin"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/recyclerView"/>


    </RelativeLayout>


    <include
        layout="@layout/main_voice_player"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/mainPlayer"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>